---

<Layout title="dev books, libros para mirones">

<main>
<h1 class="text-center text-7xl font-extrabold ">hello</h1>
<span class="text-center block "></span>
<br>
<br>

</main>



<section aria-label="libros librosos">

    <div class="px-4 mx-auto max-w-screen-xl">

<div class="grid gap-6 md:grid-cols-2">  {
books.map(book => {
    
    // Ahora sí, 'book' existe y esto funcionará:
    const { slug, data } = book
    const { title, author, img, readtime, description, buy } = data

    return (
      <article class="flex">
        <a href={`/libro/${slug}`} class="mb-2 xl:mb-0 transition hover:scale-110">
            <img 
            transition:name= {`img-${slug}`}
                src={`/img/${img}`} 
                alt={title} 
                class="mr-5 w-48 rounded" />
        </a>

        <div class="flex flex-col justify-center">
            <h2 class="mb-2 text-xl font-bold leading-tight text-white">{title}</h2>
            
            <p class="mb-4 text-gray-300 max-w-sm">{description}</p>
            
            <span class="text-xs">⏳ Lectura en {readtime} minutos</span>
        </div>
      </article>
    )
})
}
</div>
    </div>
</section>
</Layout>
